@model Models.Player

<html lang = "ru">
<head>
    <title>МегаКрутаяТабличкаИгроков</title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>
<body>
<h2>Создать игрока</h2>
<form asp-action="Create" method="POST">
    <div class="form-group">
       <label asp-for="Nickname" for="Nickname">Никнейм:</label>
       <input asp-for="Nickname" name="Nickname" for="Nickname" class="form-control"/>
       <span asp-validation-for="Nickname" class="text-danger"></span>
   </div>
    <div class="form-group">
        <label asp-for="MoneySum">Кошель:</label>
        <input asp-for="MoneySum" name="MoneySum" class="form-control" />
        <span asp-validation-for="MoneySum" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="saveButton">Сохранить</button>
</form>
<div>
    <a asp-action="Index" href="../Player">Назад к списку игроков</a>
</div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
